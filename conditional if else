#include <stdio.h>
int main()
{
    float d;
    printf("Enter the value of the late days: ");
    scanf("%f", &d);
    float x = 5;
    float y = d - 5;
    float z = d - 10;
    if (d >= 1 && d <= 5)
    {
        printf("The amount of fine is:  %f rupee", (d * 50) / 100);
    }
    else if (d > 5 && d <= 10)
    {

        printf("The amount of fine is: %f rupee", y * 1 + x * 0.5);
    }
    if (d > 10 && d <= 30)
    {

        printf("The amount of fine is: %f rupee", z * 5 + y * 1 + x * 0.5);
    }
    if (d > 30)
    {

        printf("The amount of fine is: %f rupee \n And your membership is cancelled", z * 5 + y * 1 + x * 0.5);
    }
}
